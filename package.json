{
  "name": "chonost-manuscript-os-unified",
  "version": "3.1.0",
  "private": true,
  "description": "An Intelligent Manuscript Management System with a unified architecture.",
  "author": "billlzzz10",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/billlzzz10/Chonost-manifest-os"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace=@chonost/web",
    "dev:backend": "cd apps/backend && uvicorn main:app --reload",
    "build:web": "npm run build --workspace=@chonost/web",
    "tauri": "npm run tauri --workspace=@chonost/web",
    "test:backend": "cd apps/backend && python -m pytest",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker-compose down",
    "prepare": "husky install",
    "ai:commit": "node scripts/ai-commit.js commit",
    "fix:duplicates:daily": "node packages/auto-duplicate-fixer/scripts/pipeline.js --mode=daily",
    "fix:duplicates:aggressive": "node packages/auto-duplicate-fixer/scripts/pipeline.js --mode=aggressive",
    "fix:duplicates:dry-run": "node packages/auto-duplicate-fixer/scripts/pipeline.js --dry-run",
    "check:duplicates": "node packages/auto-duplicate-fixer/scripts/detect.js",
    "decide:duplicates": "node packages/auto-duplicate-fixer/scripts/decide.js",
    "refactor:duplicates": "node packages/auto-duplicate-fixer/scripts/refactor.js",
    "validate:duplicates": "bash packages/auto-duplicate-fixer/scripts/validate.sh",
    "deploy:duplicates": "node packages/auto-duplicate-fixer/scripts/deploy.js"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
