{
  "name": "chonost-mcp-tools",
  "displayName": "Chonost MCP Tools",
  "version": "0.1.0",
  "publisher": "chonost",
  "description": "VS Code extension for Chonost MCP Tools",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:chonost.tools.run",
    "onCommand:chonost.tools.pickAndRun",
    "onCommand:chonost.tools.list"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "chonost.tools.run",
        "title": "Chonost: Run Tool",
        "category": "Chonost MCP"
      },
      {
        "command": "chonost.tools.pickAndRun",
        "title": "Chonost: Pick & Run Tool",
        "category": "Chonost MCP"
      },
      {
        "command": "chonost.tools.list",
        "title": "Chonost: List Available Tools",
        "category": "Chonost MCP"
      }
    ],
    "configuration": {
      "title": "Chonost MCP",
      "properties": {
        "chonost.orchestratorUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "MCP Orchestrator base URL"
        },
        "chonost.toolsSchemaPath": {
          "type": "string",
          "default": "${workspaceFolder}/tools.schema.json",
          "description": "Path to tools.schema.json"
        }
      }
    },
    "jsonValidation": [
      {
        "fileMatch": ["/tools.schema.json", "*/tools.schema.json"],
        "url": "./schemas/tools.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}

