{
  "server_info": {
    "name": "universal-filesystem-mcp-server",
    "version": "3.0.0",
    "description": "Universal File System Analysis and Management MCP Server",
    "author": "Orion Senior Dev",
    "license": "MIT"
  },
  "supported_platforms": {
    "local": {
      "windows": {
        "description": "Windows File System",
        "features": ["file_scanning", "metadata_extraction", "duplicate_detection"],
        "paths": ["C:\\", "D:\\", "E:\\"],
        "file_systems": ["NTFS", "FAT32", "exFAT"]
      },
      "macos": {
        "description": "macOS File System",
        "features": ["file_scanning", "metadata_extraction", "duplicate_detection"],
        "paths": ["/Users/", "/Applications/", "/System/"],
        "file_systems": ["APFS", "HFS+", "FAT32"]
      },
      "linux": {
        "description": "Linux File System",
        "features": ["file_scanning", "metadata_extraction", "duplicate_detection"],
        "paths": ["/home/", "/var/", "/usr/"],
        "file_systems": ["ext4", "ext3", "btrfs", "xfs"]
      }
    },
    "cloud": {
      "google_drive": {
        "description": "Google Drive Storage",
        "features": ["file_scanning", "sync_status", "sharing_analysis"],
        "api_endpoint": "https://www.googleapis.com/drive/v3",
        "scopes": ["https://www.googleapis.com/auth/drive.readonly"]
      },
      "dropbox": {
        "description": "Dropbox Storage",
        "features": ["file_scanning", "sync_status", "version_history"],
        "api_endpoint": "https://api.dropboxapi.com/2",
        "scopes": ["files.metadata.read"]
      },
      "onedrive": {
        "description": "Microsoft OneDrive",
        "features": ["file_scanning", "sync_status", "collaboration_analysis"],
        "api_endpoint": "https://graph.microsoft.com/v1.0",
        "scopes": ["Files.Read.All"]
      },
      "aws_s3": {
        "description": "Amazon S3 Storage",
        "features": ["bucket_analysis", "object_listing", "cost_analysis"],
        "api_endpoint": "https://s3.amazonaws.com",
        "regions": ["us-east-1", "us-west-2", "eu-west-1"]
      }
    },
    "mobile": {
      "android": {
        "description": "Android Device Storage",
        "features": ["internal_storage", "external_storage", "app_data"],
        "storage_types": ["internal", "external", "cloud_sync"],
        "permissions": ["READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
      },
      "ios": {
        "description": "iOS Device Storage",
        "features": ["local_storage", "icloud_sync", "app_sandbox"],
        "storage_types": ["local", "icloud", "app_specific"],
        "permissions": ["NSDocumentsFolderUsageDescription"]
      }
    },
    "network": {
      "ftp": {
        "description": "FTP Server",
        "features": ["file_listing", "transfer_analysis", "connection_testing"],
        "ports": [21, 2121],
        "protocols": ["FTP", "FTPS"]
      },
      "sftp": {
        "description": "SFTP Server",
        "features": ["secure_file_listing", "key_based_auth", "transfer_analysis"],
        "ports": [22],
        "protocols": ["SSH", "SFTP"]
      },
      "smb": {
        "description": "SMB/NAS Storage",
        "features": ["share_enumeration", "permission_analysis", "network_discovery"],
        "ports": [445, 139],
        "protocols": ["SMB", "CIFS"]
      },
      "webdav": {
        "description": "WebDAV Storage",
        "features": ["web_based_access", "version_control", "collaboration"],
        "ports": [80, 443],
        "protocols": ["HTTP", "HTTPS"]
      }
    }
  },
  "tool_categories": {
    "core_operations": [
      "universal_scan_directory",
      "universal_get_summary",
      "universal_search"
    ],
    "platform_specific": [
      "cloud_sync_status",
      "mobile_storage_analysis",
      "network_storage_connect"
    ],
    "cross_platform": [
      "cross_platform_compare",
      "storage_migration_plan",
      "universal_backup_analysis"
    ],
    "unicornx_integration": [
      "unicornx_universal_export"
    ]
  },
  "default_configurations": {
    "scan_config": {
      "max_depth": 10,
      "include_hidden": false,
      "calculate_hashes": true,
      "hash_size_limit_mb": 50,
      "exclude_patterns": [
        "*.tmp",
        "*.log",
        ".DS_Store",
        "Thumbs.db"
      ]
    },
    "search_config": {
      "case_sensitive": false,
      "use_regex": false,
      "max_results": 100,
      "include_metadata": true
    },
    "sync_config": {
      "check_interval_seconds": 300,
      "auto_sync": false,
      "conflict_resolution": "ask_user"
    }
  },
  "performance_settings": {
    "max_concurrent_scans": 4,
    "max_file_size_mb": 100,
    "timeout_seconds": 30,
    "memory_limit_mb": 512,
    "cache_enabled": true,
    "cache_ttl_seconds": 3600
  },
  "security_settings": {
    "encrypt_credentials": true,
    "secure_connections_only": true,
    "validate_certificates": true,
    "session_timeout_minutes": 60,
    "max_failed_attempts": 3
  },
  "logging_config": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_enabled": true,
    "file_path": "logs/universal_mcp.log",
    "max_file_size_mb": 10,
    "backup_count": 5
  },
  "unicornx_integration": {
    "enabled": true,
    "biome_colors": {
      "DEV": "#3B82F6",
      "CREATIVE": "#8B5CF6",
      "BUSINESS": "#10B981",
      "PERSONAL": "#F59E0B"
    },
    "export_formats": ["json", "markdown", "html"],
    "auto_export": false
  }
}
